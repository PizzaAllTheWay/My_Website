# setupfiles/webpage.service  (TEMPLATE)
[Unit]
Description=Flask demo (Gunicorn)
After=network-online.target
Wants=network-online.target

[Service]
User={{USER}}
Group={{GROUP}}
WorkingDirectory={{APP_ROOT}}
Environment="PATH={{APP_ROOT}}/.venv/bin"
ExecStart={{APP_ROOT}}/.venv/bin/gunicorn --workers 2 --chdir {{APP_ROOT}}/src --bind 127.0.0.1:8000 app:app
Restart=on-failure
RestartSec=3

[Install]
WantedBy=multi-user.target
